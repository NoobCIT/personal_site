<%= render 'layouts/header' %>
<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% @articles.each do |article| %>
      <div class="post-preview">
        <a href="post.html">
          <h2 class="post-title">
            <%= link_to article.title, article_path(article) %>
          </h2>
          <h3 class="post-subtitle">
            <%= article.subtitle %>
          </h3>
        </a>
        <p class="post-meta">Posted on <%= article.created_at.strftime("%B %d, %Y") %></p>
      </div>
      <% end %>

      <hr>

      <!-- Pager -->
      <div class="clearfix">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>

<hr>
