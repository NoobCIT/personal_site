<header class="masthead" style="background-image: url('')">
  <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Create A New Article</h1>
          </div>
        </div>
      </div>
    </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <form>
        <%= form_for(@article, html: { multipart: true }) do |f| %>
          <ul>
            <% @article.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
          <div class="form-group">
            <%= f.label :title %><br />
            <%= f.text_field :title, class: 'col-12 input-font-size' %>
          </div>
          <div class="form-group">
            <%= f.label :subtitle %><br />
            <%= f.text_field :subtitle, class: 'col-12 input-font-size' %>
          </div>
          <div class="form-group">
            <%= f.label :body %><br />
            <%= f.text_area :body, :rows => 20, class: 'col-12 input-font-size' %>
          </div>
          <div class="form-group">
            <%= f.label :tag_list %><br />
            <%= f.text_field :tag_list, class: 'col-12 input-font-size' %>
          </div>
          <div class="form-group">
            <% if @article.image.exists? %>
              <%= image_tag @article.image.url %><br />
            <% end %>
            <%= f.label :image, "Attach Header Image" %><br />
            <%= f.file_field :image %>
          </div>
          <div>
            <%= f.submit %>
          </div>
        <% end %>
      </form>
    </div>
  </div>
</div>
