<!-- Page Header -->
<header class="masthead" >
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading">
          <h1><%= @static_page.name %></h1>
          <h2 class="subheading"></h2>
          <span class="meta"></span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <p><%= markdown(@static_page.content).html_safe %></p>
        <% if logged_in? %>
          <%= link_to "Edit", edit_static_page_path(@static_page) %>
          <%= link_to "Delete", static_page_path(@static_page),
              method: :delete,
              data: {confirm: "Are you sure you want to delete this page?"} %>
        <% end %>
      </div>
    </div>
  </div>
</article>

<hr>
