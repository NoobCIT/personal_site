<%= render 'layouts/header' %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <form>
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'col-12 input-font-size' %>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: 'col-12 input-font-size' %>
          </div>
          <div class="form-group">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>
          </div>
          <div>
            <%= f.submit 'Login' %>
          </div>
        <% end %>
      </form>
    </div>
  </div>
</div>
