#not used
<header class="masthead" style="background-image: url('')">
  <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Create A New Page</h1>
          </div>
        </div>
      </div>
    </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <form>
        <%= form_for(@user) do |f| %>
          <ul>
            <% @user.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: 'col-12 input-font-size' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, 'Confirmation' %><br />
            <%= f.password_field :password_confirmation, class: 'col-12 input-font-size' %>
          </div>
          <div>
            <%= f.submit 'Sign Up Now!' %>
          </div>
        <% end %>
      </form>
    </div>
  </div>
</div>
